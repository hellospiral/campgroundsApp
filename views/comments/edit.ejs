<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Edit Comment </h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" id="commentForm">
            <div class="form-group">
                <textarea class="form-control" id="text" name="comment[text]" form="commentForm" rows="3"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
    

<% include ../partials/footer %>